from spack.package import *


class {{.ClassName}}(RPackage):
	{{if eq .URLType "urls"}}
		{{- .URLType}} = [{{range $i, $u := .URLs}}{{if gt $i 0}}, {{end}}"{{$u}}"{{end}}]
	{{- else if .URLType}}
		{{- .URLType}} = "{{index .URLs 0}}"
	{{- end}}
	{{.Repo}} = "{{.PackageName}}"